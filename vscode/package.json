{
    "name": "codestream",
    "version": "0.0.1",
    "author": "CodeStream",
    "description": "CodeStream",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/TeamCodeStream/vscode"
    },
    "engines": {
        "vscode": "^1.23.0"
    },
    "enableProposedApi": true,
    "publisher": "CodeStream",
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "*"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "CodeStream configuration",
            "properties": {
                "codestream.debug": {
                    "type": "boolean",
                    "default": false,
                    "description": "Specifies debug mode",
                    "scope": "window"
                },
                "codestream.traceLevel": {
                    "type": "string",
                    "default": "silent",
                    "enum": [
                        "silent",
                        "errors",
                        "verbose",
                        "debug"
                    ],
                    "description": "Specifies how much (if any) output will be sent to the CodeStream output channel",
                    "scope": "window"
                },
                "codestream.serverUrl": {
                    "type": "string",
                    "default": "https://api.codestream.com",
                    "description": "Specifies the url to use to connect to the CodeStream service",
                    "scope": "window"
                },
                "codestream.username": {
                    "type": "string",
                    "default": null,
                    "description": "Specifies the username to use to connect to the CodeStream service",
                    "scope": "window"
                },
                "codestream.password": {
                    "type": "string",
                    "default": null,
                    "description": "Specifies the password to use to connect to the CodeStream service",
                    "scope": "window"
                },
                "codestream.explorer.enabled": {
                    "type": "boolean",
                    "default": true,
                    "description": "Specifies whether to show the `CodeStream` explorer",
                    "scope": "window"
                }
            }
        },
        "commands": [
            {
                "command": "codestream.signIn",
                "title": "Sign In...",
                "category": "CodeStream"
            },
            {
                "command": "codestream.signOut",
                "title": "Sign Out",
                "category": "CodeStream"
            },
            {
                "command": "codestream.openStream",
                "title": "Open CodeStream",
                "category": "CodeStream"
            },
            {
                "command": "codestream.post",
                "title": "Post Message",
                "category": "CodeStream"
            },
            {
                "command": "codestream.explorer.inviteToLiveShare",
                "title": "Invite to Live Share",
                "category": "CodeStream"
            },
            {
                "command": "codestream.explorer.refresh",
                "title": "Refresh",
                "category": "CodeStream"
            },
            {
                "command": "codestream.explorer.refreshNode",
                "title": "Refresh",
                "category": "CodeStream"
            }
        ],
        "menus": {
            "commandPalette": [
                {
                    "command": "codestream.signIn",
                    "when": "!codestream:enabled"
                },
                {
                    "command": "codestream.signOut",
                    "when": "codestream:enabled"
                },
                {
                    "command": "codestream.openStream",
                    "when": "editorTextFocus && codestream:enabled"
                },
                {
                    "command": "codestream.post",
                    "when": "codestream:enabled"
                },
                {
                    "command": "codestream.explorer.inviteToLiveShare",
                    "when": "false"
                },
                {
                    "command": "codestream.explorer.refresh",
                    "when": "false"
                },
                {
                    "command": "codestream.explorer.refreshNode",
                    "when": "false"
                }
            ],
            "view/item/context": [
                {
                    "command": "codestream.explorer.refreshNode",
                    "when": "view == codestream",
                    "group": "9_codestream@1"
                },
                {
                    "command": "codestream.explorer.inviteToLiveShare",
                    "when": "view == codestream && viewItem == codestream:user",
                    "group": "2_codestream@1"
                }
            ]
        },
        "views": {
            "explorer": [
                {
                    "id": "codestream",
                    "name": "CodeStream",
                    "when": "codestream:explorer"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -p ./",
        "watch": "tsc -w -p ./",
        "pack": "vsce package",
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
    "dependencies": {
        "inversify": "4.11.1",
        "lodash.debounce": "4.0.8",
        "pubnub": "4.20.2",
        "node-fetch": "2.1.2",
        "reflect-metadata": "0.1.12",
        "tslib": "1.9.0"
    },
    "devDependencies": {
        "@types/node": "9.6.5",
        "@types/node-fetch": "1.6.8",
        "@types/pubnub": "4.0.2",
        "tslint": "5.9.1",
        "typescript": "2.8.1",
        "vscode": "1.1.14",
        "vscode-languageclient": "4.1.3"
    }
}
