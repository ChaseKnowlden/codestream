{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Launch CodeStream",
			"type": "extensionHost",
			"request": "launch",
			"runtimeExecutable": "${execPath}",
			"args": ["--extensionDevelopmentPath=${workspaceRoot}"],
			"smartStep": true,
			"sourceMaps": true,
			"outFiles": ["${workspaceRoot}/dist/**/*.js"],
			"trace": true
		},
		{
			"name": "Rebuild & Launch CodeStream",
			"type": "extensionHost",
			"request": "launch",
			"runtimeExecutable": "${execPath}",
			"args": ["--extensionDevelopmentPath=${workspaceRoot}"],
			"smartStep": true,
			"sourceMaps": true,
			"outFiles": ["${workspaceRoot}/dist/**/*.js"],
			"preLaunchTask": "npm: rebuild"
		},
		{
			"name": "Watch & Launch CodeStream",
			"type": "extensionHost",
			"request": "launch",
			"runtimeExecutable": "${execPath}",
			"args": ["--extensionDevelopmentPath=${workspaceRoot}"],
			"smartStep": true,
			"sourceMaps": true,
			"outFiles": ["${workspaceRoot}/dist/**/*.js"],
			"trace": true,
			"preLaunchTask": "watch"
		},
		{
			"name": "Debug Extension (Akonwi)",
			"type": "extensionHost",
			"request": "launch",
			"runtimeExecutable": "${execPath}",
			"args": [
				"--extensionDevelopmentPath=${workspaceRoot}",
				"--enable-proposed-api",
				"akonwi.codestream",
				"/Users/akonwi/projects/bundles/"
			],
			"smartStep": true,
			"sourceMaps": true,
			"outFiles": ["${workspaceRoot}/dist/**/*.js"],
			"preLaunchTask": "npm: watch"
		}
	]
}
