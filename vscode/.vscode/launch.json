{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Launch CodeStream",
			"type": "extensionHost",
			"request": "launch",
			"runtimeExecutable": "${execPath}",
			"args": ["--extensionDevelopmentPath=${workspaceRoot}"],
			"env": {
				"VSCODE_DEBUGGING_EXTENSION": "codestream"
			},
			"outFiles": ["${workspaceRoot}/dist/**/*.js"],
			"skipFiles": ["<node_internals>/**/*.js", "**/node_modules/**/*.js", "**/extensions/**/*.js"],
			"smartStep": true,
			"sourceMaps": true
		},
		{
			"name": "Rebuild & Launch CodeStream",
			"type": "extensionHost",
			"request": "launch",
			"runtimeExecutable": "${execPath}",
			"args": ["--extensionDevelopmentPath=${workspaceRoot}"],
			"env": {
				"VSCODE_DEBUGGING_EXTENSION": "codestream"
			},
			"outFiles": ["${workspaceRoot}/dist/**/*.js"],
			"skipFiles": ["<node_internals>/**/*.js", "**/node_modules/**/*.js", "**/extensions/**/*.js"],
			"smartStep": true,
			"sourceMaps": true,
			"preLaunchTask": "npm: rebuild"
		},
		{
			"name": "Watch & Launch CodeStream",
			"type": "extensionHost",
			"request": "launch",
			"runtimeExecutable": "${execPath}",
			"args": ["--extensionDevelopmentPath=${workspaceRoot}"],
			"env": {
				"VSCODE_DEBUGGING_EXTENSION": "codestream"
			},
			"outFiles": ["${workspaceRoot}/dist/**/*.js"],
			"skipFiles": ["<node_internals>/**/*.js", "**/node_modules/**/*.js", "**/extensions/**/*.js"],
			"smartStep": true,
			"sourceMaps": true,
			"preLaunchTask": "watch"
		}
	]
}
