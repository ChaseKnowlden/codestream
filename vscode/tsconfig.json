{
	"compilerOptions": {
		"baseUrl": "./src",
		"experimentalDecorators": true,
		"forceConsistentCasingInFileNames": true,
		"importHelpers": true,
		"lib": ["es2015", "es2016", "es2017"],
		"module": "esnext",
		"moduleResolution": "node",
		"noFallthroughCasesInSwitch": true,
		"noImplicitReturns": true,
		"noUnusedLocals": false,
		"outDir": "dist",
		"paths": {
			"@codestream/protocols/agent": ["protocols/agent/agent.protocol"],
			"@codestream/protocols/api": ["protocols/agent/api.protocol"],
			"@codestream/protocols/webview": ["protocols/webview/webview.protocol"]
		},
		"preserveSymlinks": true,
		"rootDir": "./src",
		"sourceMap": true,
		"strict": true,
		"target": "es2017"
	},
	"exclude": ["node_modules", "src/webviews/app"]
}
