<idea-plugin>
    <id>com.codestream.jetbrains-codestream</id>
    <name>CodeStream</name>
    <vendor email="support@codestream.com" url="http://www.codestream.com">CodeStream</vendor>

    <description>Discuss, review, and share code with your team. Integrates w/ Slack, Jira, Trello, GitHub, and more</description>

    <extensions defaultExtensionNs="com.intellij">
        <projectService serviceImplementation="com.codestream.AgentService"/>
        <projectService serviceImplementation="com.codestream.AuthenticationService"/>
        <projectService serviceImplementation="com.codestream.CredentialsService"/>
        <projectService serviceImplementation="com.codestream.SettingsService"/>
        <projectService serviceImplementation="com.codestream.SessionService"/>
        <projectService serviceImplementation="com.codestream.WebViewService"/>
        <projectService serviceImplementation="com.codestream.editor.EditorService"/>

        <projectConfigurable groupId="tools" displayName="CodeStream" id="preferences.CodeStreamConfigurable"
                             instance="com.codestream.CodeStreamConfigurable"/>

        <intentionAction>
            <className>com.codestream.actions.AddCommentAction</className>
            <category>Other</category>
        </intentionAction>
        <intentionAction>
            <className>com.codestream.actions.CreateBookmarkAction</className>
            <category>Other</category>
        </intentionAction>
        <intentionAction>
            <className>com.codestream.actions.CreateIssueAction</className>
            <category>Other</category>
        </intentionAction>
        <intentionAction>
            <className>com.codestream.actions.GetPermalinkAction</className>
            <category>Other</category>
        </intentionAction>
    </extensions>

    <project-components>
        <component>
            <implementation-class>com.codestream.CodeStreamComponent</implementation-class>
        </component>
    </project-components>



    <actions>
        <group id="com.codestream.Actions" popup="true" text="CodeStream" icon="/images/codestream.svg">
            <add-to-group group-id="EditorPopupMenu" anchor="after" relative-to-action="VcsGroup"/>
            <action id="CodeStream.AddComment" class="com.codestream.actions.AddCommentAction" text="Add _Comment"
                    description="Add comment" icon="/images/marker-comment.svg">
                <keyboard-shortcut keymap="$default" first-keystroke="control SLASH" second-keystroke="C"/>
                <keyboard-shortcut keymap="Mac OS X" first-keystroke="control SLASH" second-keystroke="C"
                                   replace-all="true"/>
                <keyboard-shortcut keymap="Mac OS X 10.5+" first-keystroke="control SLASH" second-keystroke="C"
                                   replace-all="true"/>
            </action>
            <action id="CodeStream.CreateIssue" class="com.codestream.actions.CreateIssueAction" text="Create _Issue"
                    description="Create issue" icon="/images/marker-issue.svg">
                <keyboard-shortcut keymap="$default" first-keystroke="control SLASH" second-keystroke="I"/>
                <keyboard-shortcut keymap="Mac OS X" first-keystroke="control SLASH" second-keystroke="I"
                                   replace-all="true"/>
                <keyboard-shortcut keymap="Mac OS X 10.5+" first-keystroke="control SLASH" second-keystroke="I"
                                   replace-all="true"/>
            </action>
            <action id="CodeStream.CreateBookmark" class="com.codestream.actions.CreateBookmarkAction" text="Create _Bookmark"
                    description="Add comment" icon="/images/marker-bookmark.svg">
                <keyboard-shortcut keymap="$default" first-keystroke="control SLASH" second-keystroke="B"/>
                <keyboard-shortcut keymap="Mac OS X" first-keystroke="control SLASH" second-keystroke="B"
                                   replace-all="true"/>
                <keyboard-shortcut keymap="Mac OS X 10.5+" first-keystroke="control SLASH" second-keystroke="B"
                                   replace-all="true"/>
            </action>
            <action id="CodeStream.GetPermalink" class="com.codestream.actions.GetPermalinkAction" text="Get _Permalink"
                    description="Get permalink" icon="/images/marker-permalink.svg">
                <keyboard-shortcut keymap="$default" first-keystroke="control SLASH" second-keystroke="P"/>
                <keyboard-shortcut keymap="Mac OS X" first-keystroke="control SLASH" second-keystroke="P"
                                   replace-all="true"/>
                <keyboard-shortcut keymap="Mac OS X 10.5+" first-keystroke="control SLASH" second-keystroke="P"
                                   replace-all="true"/>
            </action>
        </group>
    </actions>

    <depends>com.intellij.modules.platform</depends>
    <idea-version since-build="183"/>
</idea-plugin>