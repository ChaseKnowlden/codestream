<idea-plugin>
    <id>com.codestream.jetbrains-codestream</id>
    <name>CodeStream</name>
    <vendor email="support@codestream.com" url="http://www.codestream.com">CodeStream</vendor>

    <description><![CDATA[
    CodeStream<br>
    <em>description needs at least 40 characters</em>
    ]]></description>


    <extensions defaultExtensionNs="com.intellij">
        <toolWindow id="CodeStream" secondary="true" icon="/images/codestream.svg" anchor="right"
                    factoryClass="com.codestream.WindowFactory"/>

        <applicationService serviceInterface="com.codestream.CredentialsService"
                            serviceImplementation="com.codestream.CredentialsServiceImpl"/>

        <applicationService serviceInterface="com.codestream.SettingsService"
                            serviceImplementation="com.codestream.SettingsServiceImpl"/>
    </extensions>

    <actions>
        <!-- Add your actions here -->
    </actions>
</idea-plugin>