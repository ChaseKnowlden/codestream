<idea-plugin>
    <id>com.codestream.jetbrains-codestream</id>
    <name>CodeStream</name>
    <vendor email="support@codestream.com" url="http://www.codestream.com">CodeStream</vendor>

    <description><![CDATA[
    CodeStream<br>
    <em>description needs at least 40 characters</em>
    ]]></description>

    <extensions defaultExtensionNs="com.intellij">
        <projectService serviceImplementation="com.codestream.AgentService"/>
        <projectService serviceImplementation="com.codestream.AuthenticationService"/>
        <projectService serviceImplementation="com.codestream.CredentialsService"/>
        <projectService serviceImplementation="com.codestream.EditorManagerService"/>
        <projectService serviceImplementation="com.codestream.SettingsService"/>
        <projectService serviceImplementation="com.codestream.SessionService"/>
        <projectService serviceImplementation="com.codestream.WebViewService"/>
    </extensions>

    <project-components>
        <component>
            <implementation-class>com.codestream.CodeStreamComponent</implementation-class>
        </component>
    </project-components>

    <actions>
        <!-- Add your actions here -->
    </actions>

    <depends>com.intellij.modules.platform</depends>
    <idea-version since-build="183" />
</idea-plugin>