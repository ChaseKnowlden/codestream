<UserControl x:Class="CodeStream.VisualStudio.CodeStreamDebugControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vsshell="clr-namespace:Microsoft.VisualStudio.Shell;assembly=Microsoft.VisualStudio.Shell.15.0"
             Background="{DynamicResource {x:Static vsshell:VsBrushes.WindowKey}}"
             Foreground="{DynamicResource {x:Static vsshell:VsBrushes.WindowTextKey}}"
             mc:Ignorable="d" d:DesignWidth="400"
             Name="MyToolWindow" Height="398.289">
    <Grid>
        <StackPanel Orientation="Vertical">
            <TextBlock Margin="10" HorizontalAlignment="Center">CodeStreamDebug</TextBlock>
            <TextBox x:Name="Request" Width="300" Margin="50,0" Text="codeStream/post/prepareWithCode" />
            <TextBox Name="Params" Margin="10,10,10,10" Width="300" Height="100" TextWrapping="Wrap" AcceptsReturn="True" AcceptsTab="True"></TextBox>
            <Button Content="Execute" Click="button1_Click" Width="100" Height="20" x:Name="button1" Margin="100,0"/>
            <TextBox Name="Results" Margin="10,10,10,10" Width="300" Height="200" TextWrapping="Wrap"></TextBox>
        </StackPanel>
    </Grid>
</UserControl>
