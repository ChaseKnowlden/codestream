#!/bin/bash

#desc# package up a build

echo "==== building agent ===="
cd ../shared/agent
npm run bundle

echo "==== updating webview dependencies ===="
cd ../shared/ui
rm -rf node_modules
npm install --no-save

echo "==== updating package dependencies ===="
cd ../atom
rm -rf node_modules
npm install --no-save

echo "==== building atom package ===="
npx webpack --env.production
