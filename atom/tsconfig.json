{
	"compilerOptions": {
		"baseUrl": "lib",
		"emitDecoratorMetadata": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"forceConsistentCasingInFileNames": true,
		"lib": ["es2017", "dom", "dom.iterable"],
		"module": "esnext",
		"moduleResolution": "node",
		"noFallthroughCasesInSwitch": true,
		"noImplicitReturns": false,
		"noImplicitAny": false,
		"noUnusedLocals": false,
		"outDir": "dist",
		"paths": {
			"@codestream/protocols/agent": ["protocols/agent/agent.protocol"],
			"@codestream/protocols/api": ["protocols/agent/api.protocol"],
			"@codestream/protocols/webview": ["protocols/webview/webview.protocol"],
			"vscode-jsonrpc": ["../node_modules/atom-languageclient/node_modules/vscode-jsonrpc"]
		},
		"preserveSymlinks": true,
		"rootDir": "lib",
		"sourceMap": true,
		"strict": true,
		"target": "es2017",
		"jsx": "react"
	},
	"exclude": ["node_modules", "webview-lib"]
}
