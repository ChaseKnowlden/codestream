{
	"compilerOptions": {
		"baseUrl": "./lib",
		"emitDecoratorMetadata": true,
		"esModuleInterop": false,
		"experimentalDecorators": true,
		"forceConsistentCasingInFileNames": true,
		"importHelpers": true,
		"lib": ["es2015", "es2016", "es2017", "dom"],
		"module": "esnext",
		"moduleResolution": "node",
		"noFallthroughCasesInSwitch": true,
		"noImplicitReturns": false,
		"noImplicitAny": false,
		"noUnusedLocals": false,
		"outDir": "dist",
		"paths": {
			"@codestream/protocols/agent": ["protocols/agent/agent.protocol"],
			"@codestream/protocols/api": ["protocols/agent/api.protocol"],
			"@codestream/protocols/webview": ["protocols/webview/webview.protocol"],
			"@codestream/protocols/host": ["protocols/webview/host.protocol"],
			"vscode-jsonrpc": ["../../codestream-components/vscode-jsonrpc.shim.ts"]
		},
		"resolveJsonModule": false,
		"rootDirs": ["./lib"],
		"sourceMap": true,
		"strict": true,
		"target": "esnext",
		"traceResolution": false,
		"jsx": "react"
	},
	"exclude": ["node_modules", "webview-lib"]
}
